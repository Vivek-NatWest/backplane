		"include": [
			"src/**/!(*.test.*).[tj]s?(x)"
		],
		"exclude": [
			"src/_tests_/**/*.*"
		],
		"reporter": [
			"html",
			"lcov",
			"text",
			"text-summary"
		],
		"report-dir": "coverage"
	}
