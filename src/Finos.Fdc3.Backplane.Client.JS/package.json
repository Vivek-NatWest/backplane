	"description": "JS client for connecting and communicating with 'backplane'",
	"main": "./lib/index.js",
	"scripts": {
		"build": "tsc",
		"test": "nyc mocha -r ts-node/register src/_tests_/*.test.ts",
		"buildPack": "yarn && tsc && npm pack --pack-destination ../../output/jsclient"
	},
	"author": "FINOS",
	"license": "Apache-2.0",
	"devDependencies": {
		"@istanbuljs/nyc-config-typescript": "^1.0.2",
		"@types/chai": "^4.3.3",
		"@types/chai-spies": "^1.0.3",
		"@types/mocha": "^9.1.1",
		"chai": "^4.3.6",
		"mocha": "^10.0.0",
		"nyc": "^15.1.0",
		"ts-node": "^10.9.1",
		"tslib": "^2.4.0",
		"typescript": "^4.8.3"
	},
	"files": [
		"lib/**/*"
	],
	"dependencies": {
		"@finos/fdc3": "^1.2.0",
		"@microsoft/signalr": "^6.0.10",
		"@types/node": "^14.11.5",
		"chai-spies": "^1.0.0",
		"jest": "^29.0.3",
		"mocha": "^10.0.0",
		"typescript-collections": "^1.3.3"
	},
	"prettier": {
		"semi": true,
		"singleQuote": true,
		"arrowParens": "avoid",
		"trailingComma": "es5",
		"endOfLine": "auto",
		"printWidth": 120
	},
	"repository": {
		"type": "git",
		"url": ""
	},
	"nyc": {
		"extends": "@istanbuljs/nyc-config-typescript",
